# 70-bluetooth-pan.network
[Match]
Name=bnep*

[Network]
Description=Rocknix Bluetooth PAN Host
Address=192.168.44.1/24
DHCPServer=yes
# IP Forwarding (v255.8 compliant). NAT is handled externally by rxnm-system.
IPForward=yes
# Disabled to avoid conflict with Avahi
MulticastDNS=no
LLMNR=yes

[DHCPServer]
PoolOffset=10
PoolSize=50
EmitDNS=yes
